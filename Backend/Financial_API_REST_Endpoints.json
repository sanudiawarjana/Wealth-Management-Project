{
  "info": {
    "name": "Financial API - All Endpoints",
    "description": "Complete Financial Planning API with all CRUD operations and AI recommendations",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:5000"
    }
  ],
  "item": [
    {
      "name": "System",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/health"
          }
        },
        {
          "name": "API Info",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/"
          }
        },
        {
          "name": "List Routes",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/routes"
          }
        }
      ]
    },
    {
      "name": "Income",
      "item": [
        {
          "name": "Get All Income",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/api/income"
          }
        },
        {
          "name": "Create Income",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"source\": \"Salary\",\n  \"amount\": 5000,\n  \"currency\": \"USD\",\n  \"frequency\": \"monthly\"\n}"
            },
            "url": "{{base_url}}/api/income"
          }
        },
        {
          "name": "Get Income by ID",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/api/income/{{income_id}}"
          }
        },
        {
          "name": "Update Income",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"amount\": 6000\n}"
            },
            "url": "{{base_url}}/api/income/{{income_id}}"
          }
        },
        {
          "name": "Delete Income",
          "request": {
            "method": "DELETE",
            "url": "{{base_url}}/api/income/{{income_id}}"
          }
        }
      ]
    },
